//Нарисовать равнобедренный треугольник из символов *. Высоту выбирает пользователь

#include "stdafx.h" 
#include <iostream>

using namespace std;

int main()
{
	int n = 0; //высота
	cin >> n;
	for (int i = 0; i < n; i++)
	{
		for (int j = 1; j < n - i; j++)
		{
			cout << ' ';
		}

		for (int j = n - 2 * i; j <= n; j++)
		{
			cout << '*';
		}
		cout << endl;
	}

	system("pause");
	return 0;
}
